<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
xmlns:f="sap.ui.layout.form"
		controllerName="ConferenceRoom.view.Login" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Login">
		<content>
		
		<f:SimpleForm id="SimpleFormChange354" layout="ResponsiveGridLayout" title="User Authentication">
					<f:content>
						<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
							<items>
								<Input width="20rem" id="uid" placeholder="User ID"></Input>
								<Input width="20rem" id="pasw" placeholder="Password" type="Password"></Input>
								<Button width="20rem" text="Login" type="Emphasized" press="onLoginTap"></Button>
							</items>
						</VBox>
					</f:content>
				</f:SimpleForm>
		
		<!-- <Button text="Login" press="onPressButton"/> -->
	
		</content>
	</Page>
</core:View>