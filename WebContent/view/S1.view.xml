						<TimePicker id="idtimestart" valueFormat="hh:mm a" minutesStep="15"
						displayFormat="hh:mm a" placeholder="Enter Start Time ..." class="sapUiSmallMarginBottom" required="true" change="Validation" enabled="true"/>
						<!-- <TimePicker id="idtimestart" width="100%" 	valueFormat="HH:mm"
						displayFormat="HH:mm" placeholder="Enter Start Time ..." class="sapUiSmallMarginBottom" required="true" change="Validation" /> -->
						
						<Label id="idlblend" text="{i18n>appuserendtm}"/>
						<TimePicker id="idtimeend" valueFormat="hh:mm a" minutesStep="15"
						displayFormat="hh:mm a" width="100%" placeholder="Enter End Time ..." class="sapUiSmallMarginBottom" required="true" change="Validation" enabled="true"/>
						
						<!-- <TimePicker id="idtimeend" valueFormat="HH:mm"
						displayFormat="HH:mm" width="100%" placeholder="Enter End Time ..." class="sapUiSmallMarginBottom" required="true" change="Validation" /> -->
						
						<Label/>
						<CheckBox id="idcheckbox" text="All Day Event" selected="false" activeHandling="true" select="handleSelect"/>
						
						<core:Title/>
						<Label />
						<Text />
						<Label id="idlbllocation" text="{i18n>appusersltlctn}" required="true"/>
						<Select id="idlocationselect" change="onLocationSelect"
						forceSelection="true" items="{localModel>/LocationsData}">
							<core:Item key="{localModel>Location}" text="{localModel>Location}"/>
						</Select>
						
						<Label id="idlblbuilding" text="{i18n>appusersltbldng}" required="true"/>
						<Select enabled="false" id="idBuildingselect" change="onBuildingSelect"
						forceSelection="true" items="{localModel>/BuildingData}">
							<core:Item key="{localModel>Building}" text="{localModel>Building}"/>
						</Select>
						
						<Label id="idlblroom" text="{i18n>appusersltroom}" required="true"/>
						<Select enabled="false" id="idroomselect"
						forceSelection="true" items="{localModel>/ConfroomData}" change="Validation">
							<core:Item key="{localModel>Confroom}" text="{localModel>Confroom}"/>
						</Select>
						
						<Label id="idemail" text="{i18n>appuserEmail}"/>
						<Input  type="Email" placeholder="Enter Email ..." id="idinputemail"/>
						
						<Label id="idlblphno" text="{i18n>appusercntnubr}"/>
						<Input type="Number" placeholder="Enter Contact Number ..." id="idinptpn"/>
						
						<Label id="idlbldes" text="{i18n>appuserdes}"/>
						<TextArea id="idinptdes" placeholder="Enter Description ..." growingMaxLines="7" width="100%"/>
						<!-- <Label />
						<Button id="idchkavl" text="Check Availability" press="onPresscheck"/> -->
						</f:content>
					</f:SimpleForm>
			
