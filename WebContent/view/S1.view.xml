<IconTabBar id="iconTabBar" select="handleIconTabBarSelect">
	<items>
	<IconTabFilter icon="sap-icon://create-form" iconColor="Positive" count="" 
			text="{i18n>IconTabFilter1Title}" key="NewReservation" tooltip="{i18n>IconTabFilter1Tooltip}">
	<content>
		<Panel id="NewreservPanel" class="panelStyle" expandable="false" expanded="False" headerText="" width="auto">
			<f:SimpleForm 
			id="idnewresform" 
			labelMinWidth="192" 
			adjustLabelSpan="true" 
			maxContainerCols="2" 
			class="titleAdjust"
			editable="true" 
			layout="ResponsiveGridLayout" 
			title="{i18n>FormTitle}" 
			emptySpanXL="0" 
			emptySpanL="0" 
			emptySpanM="0" 
			emptySpanS="0"
			columnsXL="3" 
			columnsL="2" 
			columnsM="2" 
			singleContainerFullSize="false">
						<f:content>
						
						<core:Title/>
						<Label id="idlblusr" text="{i18n>appuser}" />
						<Text id="idinptusr" text="FIORI_ADMIN" width="100%"/>

						
						<Label id="idlbltitle" text="{i18n>appusertitle}"/>
