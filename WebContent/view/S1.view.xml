					</f:content>
				</f:SimpleForm> -->
			</Panel>
		</content>
	</IconTabFilter>
		
	<IconTabSeparator/>

		
	<IconTabFilter icon="sap-icon://group" iconColor="Critical" text="{i18n>IconTabFilter2Title}" key="Reservation" tooltip="{i18n>IconTabFilter2Tooltip}">
		<content>
			<Panel width="auto">
			<Table id="idtable" mode="SingleSelectLeft" items="{localModel>/tableData}" fixedLayout = "false" class = "columnAlignment" selectionChange = "onTableSelected">
			<headerToolbar>
				<Toolbar>
				<content>
				<Title text="{i18n>TableTitle}" level="H2"/>
				<ToolbarSpacer/>
				<SearchField width="50%" id="searchId" placeholder="Search by Title, Location, Building, Conference room" search="handleChangeSearch"/>
				<Button icon="sap-icon://sort" tooltip="SSort By" press="onpresssorter"/>
				<!-- <Button icon="sap-icon://filter" tooltip="Filter By" press="onpressfilter"/> -->
			</content>
			</Toolbar>
			</headerToolbar>
				<!-- <infoToolbar>
					<Toolbar>
					<SearchField id="searchId" placeholder="Search by date" search="handleChangeSearch"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://filter" tooltip="Filter by Date"/>
					</Toolbar>
				</infoToolbar> -->
		<columns>
			<Column demandPopin="true"><Text text="{i18n>columntitle}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columncreateddate}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columnstartdate}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columnbookddate}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columnstrttime}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columnendtime}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columnlction}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columnbuldng}"/></Column>
			<Column demandPopin="true"><Text text="{i18n>columnroom}"/></Column>
			<!-- <Column><Text text="{i18n>columnmail}"/></Column> -->
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{localModel>Title}" wrapping="false"/>
					<Text text="{ path:'localModel>Createdate',formatter: 'ConferenceRoom.util.Formatter.changeDateFormat'}" wrapping="false"/>
				<Text text="{ path:'localModel>Startdate',formatter: 'ConferenceRoom.util.Formatter.changeDateFormat'}" wrapping="false"/>
				<Text text="{ path:'localModel>Enddate',formatter: 'ConferenceRoom.util.Formatter.changeDateFormat'}" wrapping="false"/>
					<Text text="{ path:'localModel>Starttime',formatter: 'ConferenceRoom.util.Formatter.changeTimeFormat'}" wrapping="false"/>
					<Text text="{ path:'localModel>Endtime',formatter: 'ConferenceRoom.util.Formatter.changeTimeFormat'}" wrapping="false"/>
					<Text text="{localModel>Location}" wrapping="false"/>
					<Text text="{localModel>Building}" wrapping="false"/>
					<Text text="{localModel>Confroom}" wrapping="false"/>
					<!-- <Text text="{Email}" wrapping="false"/> -->
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	</Panel>
	</content>
	</IconTabFilter>
	
	<IconTabSeparator/>
	
	<IconTabFilter icon="sap-icon://manager" iconColor="" count="" 
			text="All Reservations" key="AllReservations">
	<content>
		<PlanningCalendar
			id="PC1"
			startDate="{path: '/startDate'}"
			rows="{path: '/people'}"
			appointmentsVisualization="Filled"
			appointmentSelect="handleAppointmentSelect"
			showEmptyIntervalHeaders="false"
			showWeekNumbers="true">
			<toolbarContent>
				<Title text="Title" titleStyle="H4"/>
			</toolbarContent>
			<rows>
				<PlanningCalendarRow
					icon="{pic}"
					title="{name}"
					text="{role}"
					appointments="{path : 'appointments', templateShareable: 'true'}"
					intervalHeaders="{path: 'headers', templateShareable: 'true'}">
					<customData>
						<core:CustomData key="emp-name" value="{name}" writeToDom="true"/>
					</customData>
					<appointments>
						<u:CalendarAppointment
							startDate="{start}"
							endDate="{end}"
							icon="{pic}"
							title="{title}"
							text="{info}"
							type="{type}"
							tentative="{tentative}">
						</u:CalendarAppointment>
					</appointments>
					<intervalHeaders>
						<u:CalendarAppointment
							startDate="{start}"
							endDate="{end}"
							icon="{pic}"
							title="{title}"
							type="{type}">
						</u:CalendarAppointment>
					</intervalHeaders>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
	</content>
	</IconTabFilter>
	
	</items>
	</IconTabBar>
</content>

<footer>
	<Toolbar>
		<ToolbarSpacer/>
	<!--	<Button icon="sap-icon://print" tooltip="Add Filter" press="FilterbtnPress" type="Accept"/>-->
			<Button visible="true" type="Accept" id="idcheckbtn" text="{i18n>checkbtnavilble}" press="onPressCheck" enabled = "{localModel>/BookBtn}" tooltip="{i18n>checkbttooltip}"/>
			<Button visible="true" type="Emphasized" id="idbookbtn" text="{i18n>BookBtn}" press="onPressBook" tooltip="{i18n>Bookbtntooltip}" enabled = "{localModel>/BookBtnenabled}"/>
			<Button visible="false" type="Accept" id="idupdatebtn" text="{i18n>updteBtn}" press="onPressUpdate" tooltip="{i18n>updtebtntooltip}" enabled = "{localModel>/DeleteBtn}"/>
			<Button visible="false" type="Reject" id="iddeletebtn" text="{i18n>DlteBtn}" press="onPressDelete" tooltip="{i18n>Dltebtntooltip}" enabled = "{localModel>/DeleteBtn}"/>
			<Button visible="false" type="Emphasized" id="idmailbtn" icon="sap-icon://email" press="onPressEmail" tooltip="{i18n>Emailbtntooltip}" enabled = "{localModel>/DeleteBtn}"/>					
			<Button visible="false" type="Accept" id="idprintbtn" icon="sap-icon://print" press="onPressPrint" tooltip="{i18n>Prntbtntooltip}" enabled = "{localModel>/DeleteBtn}"/>
									
	</Toolbar>
</footer>
</Page>
</core:View>